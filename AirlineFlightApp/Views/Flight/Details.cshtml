@model AirlineFlightApp.Models.ViewModels.DetailsFlight
@{
    ViewBag.Title = "Details";
}

<h2>Details of Flight</h2>

<div style="display:flex; gap:10em">
    <a href="/Flight/List" style="font-weight:bold">Go back to list</a>

    <a href="/Flight/Edit/@Model.SelectedFlight.FlightId" style="font-weight:bold; color:green">Update</a>

    <a href="/Flight/DeleteConfirm/@Model.SelectedFlight.FlightId" style="font-weight: bold; color: red">Delete</a>
</div>

<h2>Flight Number: @Model.SelectedFlight.FlightNumber</h2>
<div><strong>From: </strong> @Model.SelectedFlight.From</div>
<div><strong>To: </strong> @Model.SelectedFlight.To</div>
<div><strong>Airline: </strong> @Model.SelectedFlight.AirlineName</div>
<div><strong>Airplane: </strong> @Model.SelectedFlight.AirplaneModel</div>
<div><strong>Duration: @Model.FlightDuration</strong></div>
<div><strong>Departure Airport: </strong> @Model.SelectedFlight.DepartureAirport</div>
<div><strong>Destination Airport: </strong> @Model.SelectedFlight.DestinationAirport</div>
<div><strong>Departure Time: </strong> @Model.SelectedFlight.DepartureTime.ToString("yyyy-MM-dd hh:mm:ss tt") -- @Model.SelectedFlight.TimeZoneFrom</div>
<div><strong>Arrival Time: </strong> @Model.SelectedFlight.ArrivalTime.ToString("yyyy-MM-dd h:mm:ss tt") -- @Model.SelectedFlight.TimeZoneTo</div>
<div><strong>Ticket Price: </strong> @Model.SelectedFlight.TicketPrice</div>

