@model AirlineFlightApp.Models.AirlineDto
@{
    ViewBag.Title = "Details";
}

<h2>Details of Airline</h2>

<div style="display:flex; gap:10em">
    <a href="/Airline/List" style="font-weight:bold">Go back to list</a>

    <a href="/Airline/Edit/@Model.AirlineId" style="font-weight:bold; color:green">Update</a>

    <a href="/Airline/DeleteConfirm/@Model.AirlineId" style="font-weight: bold; color: red">Delete</a>
</div>



<h2>Name: @Model.AirlineName</h2>
<div><strong>Country: </strong> @Model.Country</div>
<div><strong>Headquarters: </strong> @Model.Headquarters</div>
<div><strong>Founder: </strong> @Model.FounderName</div>
<div><strong>Date foundation: </strong> @Model.FoundingYear.Date.ToString("yyyy-MM-dd")</div>
<div><strong>Website: </strong> <a href="@Model.Website">@Model.AirlineName</a></div>
<div><strong>Contact number: </strong> @Model.ContactNumber</div>

